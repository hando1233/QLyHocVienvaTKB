@model DemoDB2.Models.THOIKHOABIEU

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm thời khóa biểu</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="control-label col-md-2">Chi tiết khóa học</p>

        <div class="col-md-10">
            @Html.DropDownList("ChiTietID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ChiTietID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"> Họ tên học viên</p>

        <div class="col-md-10">
            @Html.DropDownList("HocVienID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.HocVienID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"> Ngày bắt đầu</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayBatDau, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgayBatDau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"> Ngày kết thúc</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2"> Học Kỳ</p>

        <div class="col-md-10">
            @Html.EditorFor(model => model.HocKy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HocKy, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>
<div style="margin-bottom:300px"></div>