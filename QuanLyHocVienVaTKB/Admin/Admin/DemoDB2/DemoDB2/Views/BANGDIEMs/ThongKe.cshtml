@model DemoDB2.Models.BANGDIEM

@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
}

<h2 class="text-center">Thống kê bảng điểm</h2>



<hr />


<canvas id="myChart" style="width:100%;max-width:90%"></canvas>

<script>
    var xValues = ["Học viên giỏi", "Học viên khá", "Học viên trung bình", "Học viên yếu", "Học viên không đủ điều kiện"];
    /**/
    var yValues = [@ViewBag.SoHocSinhGioi, @ViewBag.SoHocSinhKha, @ViewBag.SoHocSinhTB, @ViewBag.SoHocSinhYeu, @ViewBag.SoHocSinhKhongDuDieuKien];
    /**/
    var barColors = ["red", "green", "blue", "orange", "brown"];

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            legend: { display: false },
            title: {
                display: true,
                text: "Bảng thống kê danh hiệu học viên"
            }
        }
    });
</script>
