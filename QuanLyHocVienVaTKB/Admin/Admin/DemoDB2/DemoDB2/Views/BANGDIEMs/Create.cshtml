@model DemoDB2.Models.BANGDIEM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm bảng điểm</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
